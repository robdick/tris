@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">Task 1A: Query Triangle by 2d coordinates</div>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="point1-addon">Point 1</span>
                            </div>
                            <input id="p1-input" type="text" class="form-control" placeholder="x,y" aria-label="Point1" aria-describedby="point1-text">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="point2-addon">Point 2</span>
                            </div>
                            <input id="p2-input" type="text" class="form-control" placeholder="x,y" aria-label="Point3" aria-describedby="point3-text">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="point3-addon">Point 3</span>
                            </div>
                            <input id="p3-input" type="text" class="form-control" placeholder="x,y" aria-label="Point3" aria-describedby="point3-text">
                        </div>

                        <div class="input-group mb-3">
                            <button class="btn btn-sm btn-primary" id="btn-findbycoords">Find Triangle</button>
                        </div>
                    </div>
                    <div class="card-footer" id="output-bycoords"></div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">Task 1B: Query Triangle by Label</div>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="point1-addon">Position Label</span>
                            </div>
                            <input id="label-input" type="text" class="form-control" placeholder="Enter a position e.g A1, F12" aria-label="Point1" aria-describedby="point1-text">
                        </div>

                        <div class="input-group mb-3">
                            <button class="btn btn-sm btn-primary" id="btn-findbylabel">Find Triangle</button>
                        </div>
                    </div>
                    <div class="card-footer" id="output-bylabel"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
  <div class="toast-header">
    <strong class="mr-auto">Alert</strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">

  </div>
</div>
